<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.pursuege.wangtao.screenrecord.MainActivity">

    <EditText
        android:id="@+id/et_ip_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="ip地址"
        android:inputType="textUri"
        android:text="192.168.1."

        />

    <EditText
        android:id="@+id/et_port_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_ip_main"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="端口号"
        android:inputType="number"
        android:text="9001"

        />

    <EditText
        android:id="@+id/et_port_per_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_port_main"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="端口号"
        android:inputType="number"
        android:text="2000"

        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="onclickStart"
        android:padding="8dp"
        android:text="start" />


</RelativeLayout>
